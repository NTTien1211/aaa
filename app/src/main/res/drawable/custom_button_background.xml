<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CC6AD774"/>
            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"/>
        </shape>
    </item>
    <!-- Transparent overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Màu trong suốt -->
        </shape>
    </item>
</layer-list>
